-- pico-8 gta-style theme music
-- use the built-in editors to create the music, then add this code

function _init()
  -- create simple sounds first, then play
  sfx(0) -- play your main melody sound
end

function _update()
  if btnp(4) then -- z button
    sfx(0) -- play melody
  end
  if btnp(5) then -- x button  
    sfx(1) -- play bass
  end
end

function _draw()
  cls()
  print("♪ gta-style theme ♪", 32, 60, 7)
  print("press z: melody", 32, 80, 6)
  print("press x: bass", 32, 90, 6)
  
  -- simple visualizer
  for i=1,32 do
    local h = flr(rnd(20)) + 10
    rectfill(i*4-2, 128-h, i*4+1, 128, 8+i%3)
  end
end
